<h4>
  {{order.objectName}} / {{envSite.i18n.order}} #{{order.userId}}-{{order.orderNumber}}, {{order.lastName}} {{order.firstName}}, Статус: {{orderStatus order.statusId}}
  (<small ="text-muted">{{moment order.createdAt}}</small>)
</h4>
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <caption>{{envSite.i18n.tQty}} {{totalQty}}, {{envSite.i18n.tSum}} <strong class="text-nowrap">{{formatNumber totalSum}} {{envSite.currency}}</strong></caption>
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">{{envSite.i18n.product.code}}</th>
        <th scope="col">{{envSite.i18n.product.name}}</th>
        <th scope="col">{{envSite.i18n.tQty}}</th>
        <th scope="col">{{envSite.i18n.product.price}}</th>
        <th scope="col">{{envSite.i18n.tSum}}</th>
      </tr>
    </thead>
    <tbody>
      {{#each order.products as |product|}}
      <tr>
        <th scope="row">{{inc @index 1}}</th>
        <td><strong class="text-nowrap">{{product.productId}}</strong></td>
        <td><a href="/o/{{product.objectId}}/p/{{product.productId}}">{{product.name}}</a></td>
        <td><strong class="text-nowrap">{{product.qty}} {{product.unit}}</strong></td>
        <td><strong class="text-nowrap">{{formatNumber product.price}} {{../envSite.currency}}</strong></td>
        <td><strong class="text-nowrap">{{sum product.price product.qty}} {{../envSite.currency}}</strong></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <a href="{{encodeUrl envSite.botName order.objectId "o" order.id envSite.domain order.orderNumber}}" target="_blank">
    <i class="bi bi-telegram"></i> Share order to Bot @{{envSite.botName}}
  </a>
</div>
