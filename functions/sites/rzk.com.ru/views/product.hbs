<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Торговые объекты</a></li>
    <li class="breadcrumb-item"><a href="/o/{{object.id}}">{{object.name}}</a></li>
    <li class="breadcrumb-item"><a href="/o/{{object.id}}/c">Каталог товаров</a></li>
    <li class="breadcrumb-item">
      <a href="/o/{{object.id}}/c/{{product.catalog.parentId}}"><i class="bi bi-arrow-left"></i> Назад</a>
    </li>
    <li class="breadcrumb-item" aria-current="page">
      <a href="/o/{{object.id}}/c/{{product.catalog.id}}">{{product.catalog.name}}</a>
      <a href="//t.me/RzkCrimeaBot?start=o_{{object.id}}_c_{{product.catalog.id}}" target="_blank" class="ps-1 text-decoration-none">
        <i class="bi bi-telegram"></i>
      </a>
    </li>
  </ol>
</nav>
<div class="row row-cols-2 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-2 pb-3">
  <div class="col">
    <div class="card text-center h-100">
      {{#if product.imgUrlOrigin}}
        <a href="{{product.imgUrlOrigin}}" class="js-smartphoto" data-caption="{{product.name}}">
          <img src="{{product.imgUrl}}" onerror="this.src = '/icons/photo_error.svg';" class="card-img-top" alt="{{product.name}}">
        </a>
      {{else}}
        <img src="{{product.imgUrl}}" onerror="this.src = '/icons/photo_error.svg';" class="card-img-top" alt="{{product.name}}">
      {{/if}}
      <div class="card-body">
        <h5>{{product.name}} <small class="text-muted">({{product.id}})</small>
          <a href="//t.me/RzkCrimeaBot?start=o_{{object.id}}_p_{{product.id}}" target="_blank" class="ps-1 text-decoration-none">
            <i class="bi bi-telegram"></i>
          </a>
        </h5>
      </div>
      <div class="card-footer">
        <h3>
          {{product.price}} <small class="text-muted">{{currencyName}}</small>
        </h3>
        <div class="d-grid gap-2">
          <button type="button" class="btn {{#if product.qty}}btn-success{{else}}btn-primary{{/if}}" data-bs-toggle="modal" data-bs-target="#cartAddModal"
            data-product-id="{{product.id}}" data-product-name="{{product.name}}" data-product-unit="{{product.unit}}" data-product-qty="{{product.qty}}"
            data-seller-id="{{object.id}}">
            {{#if product.qty}}{{product.qty}} {{product.unit}} {{product.sum}} {{currencyName}}{{else}}Купить{{/if}}
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
{{#if product.tagsNames}}
  <h3>Tags</h3>
  <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 row-cols-xxl-5 g-2 mb-3">
    {{#each product.tagsNames as |tag|}}
      <div class="col">
        <div class="card text-center h-100">
          <ul class="list-group list-group-flush">
            {{#if tag.hidden}}
              <li class="list-group-item"><a href="/o/{{../object.id}}/c?tag={{tag.id}}">{{tag.name}} Global</a></li>
            {{else}}
              <li class="list-group-item"><a href="/o/{{../object.id}}/c/{{../product.catalog.id}}?tag={{tag.id}}">{{tag.name}}</a></li>
              <li class="list-group-item"><a href="/o/{{../object.id}}/c?tag={{tag.id}}">{{tag.name}} Global</a></li>
            {{/if}}
          </ul>
        </div>
      </div>
    {{/each}}
  </div>
{{/if}}
{{#if photos}}
  <h3>Фото</h3>
  <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 row-cols-xxl-5 g-2 mb-3">
    {{#each photos as |photo|}}
      <div class="col">
        <div class="card text-center h-100">
          <a href="{{photo.imgUrlOrigin}}" class="js-smartphoto" data-caption="{{../product.name}}">
            <img src="{{photo.imgUrl}}" onerror="this.src = '/icons/photo_error.svg';" class="card-img-top" alt="{{../product.name}}">
          </a>
        </div>
      </div>
    {{/each}}
  </div>
{{/if}}
